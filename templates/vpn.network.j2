## /etc/systemd/network/20-{{ tinc_prefix ~ tinc_network }}.network
# per-link config of systemd-network, also see {{ tinc_dir }}/tinc-up
# {{ ansible_managed }}

[Match]
Name={{ tinc_prefix ~ tinc_network }}

[Network]
Description="tinc VPN {{ tinc_network }}"
LinkLocalAddressing=no
IPv6AcceptRA=no
LLMNR=no

{%- if tinc_cur_ip %}
Address={{ tinc_cur_ip }}/24
{% endif -%}

Domains=~.

{%- if 'gw' in group_names %}
IPMasquerade=yes
{% endif -%}

{%- if systemd_broken_dhcp or tinc_cur_ip %}
DHCP=no
Domains={{ tinc_cur_domain }}

  {%- if tinc_cur_dns %}
DNS={{ tinc_cur_dns }}
  {%- endif %}
{% else %}
DHCP=yes

[DHCP]
UseDomains=true
UseHostname=false
{% endif %}
