## /etc/systemd/network/20-{{ tinc_prefix ~ tinc_name }}.network
# per-link config of systemd-network, also see {{ tinc_dir }}/tinc-up
# {{ ansible_managed }}

[Match]
Name={{ tinc_prefix ~ tinc_name }}

[Network]
Description="tinc VPN {{ tinc_name }}"
LinkLocalAddressing=no
IPv6AcceptRA=no
LLMNR=false

{% if tinc_has_ip %}
Address={{ tinc_ip }}/24
{% endif %}

{% if 'gw' in group_names %}
Domains={{ tinc_domain }}
IPForward=yes
{% else %}
Domains=~.
{% endif %}

{% if systemd_broken_dhcp or tinc_has_ip %}
{%   if tinc_dns %}
DNS={{ tinc_dns }}
{%   endif %}

DHCP=no
{% else %}
DHCP=yes

[DHCP]
UseDomains=true
RouteMetric=400
UseHostname=false
{% endif %}
