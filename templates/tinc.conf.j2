##
# {{ tinc_dir }}/tinc.conf
# {{ ansible_managed }}
# Configuration for tinc mesh VPN

Port = {{ tinc_port }}

Name = {{ tinc_nodename | default(inventory_hostname) }}

{% for host in tinc_connect | default() %}
ConnectTo = {{ host }}
{% endfor %}
AutoConnect = yes

Mode = {{ tinc_mode }}

{% if 'win' not in group_names %}
{%   if 'android' in group_names %}
Device = /dev/tun
ScriptsInterpreter = /system/bin/sh
{%   else %}
Device = /dev/net/tun
{%   endif %}
PriorityInheritance = yes
{% endif %}

DeviceStandby = yes
ProcessPriority = high
LocalDiscovery = yes

PingTimeout = 10
MaxTimeout = 300

# for tinc-1.0 connections
ReplayWindow = 64
MACLength = 8

# host config
Compression = 10
